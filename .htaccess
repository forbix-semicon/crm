# Protect data directory from direct access
<FilesMatch "\.(db|sqlite|sqlite3)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Optional: Protect backups directory (uncomment if needed)
# <Directory "backups">
#     Order allow,deny
#     Deny from all
# </Directory>

# Enable error reporting (disable in production)
# php_flag display_errors On
# php_value error_reporting E_ALL

